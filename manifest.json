{
  "name": "Blocket Sniper",
  "version": "1.0.0",
  "description": "Snipes Blocket ads",
  "manifest_version": 3,
  "author": "William Pellas",
  "action": {
    "default_popup": "index.html",
    "default_title": "Blocket Sniper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
